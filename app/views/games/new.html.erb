<h1>New Game</h1>

<br>

<ul class="letters"> <% @letters.each do |letter|%>
  <li class="letter"> <%= letter %></li>
  <% end %>
</ul>
<br>

<p>What's the longest word you can find?</p>

<form action="/score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag "word" %>
  <%= hidden_field_tag "letters", value: @letters %>

  <input type="text" name="word">
  <input type="submit" value="Go!">
</form>
